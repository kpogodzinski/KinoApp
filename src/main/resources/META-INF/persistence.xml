                      value="org.postgresql.Driver" />
            <!-- The JDBC URL to the database instance -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:postgresql://sxterm:5432/kpogodzinski_pdw" />
            <!-- The database username -->
            <property name="jakarta.persistence.jdbc.user" value="kpogodzinski" />
            <!-- The database password -->
            <property name="jakarta.persistence.jdbc.password" value="KacperP2002!" />
        </properties>
    </persistence-unit>
</persistence>